{
  "name": "piction-web",
  "private": true,
  "dependencies": {
    "@reach/router": "^1.3.1",
    "@sentry/browser": "^5.9.1",
    "@types/jest": "^25.1.4",
    "@types/node": "^13.9.0",
    "@types/reach__router": "^1.3.1",
    "@types/react": "^16.9.23",
    "@types/react-dom": "^16.9.5",
    "@types/styled-components": "^5.0.1",
    "@typescript-eslint/eslint-plugin": "^2.23.0",
    "@typescript-eslint/parser": "^2.23.0",
    "axios": "^0.19.0",
    "body-scroll-lock": "^2.6.3",
    "env-cmd": "^9.0.3",
    "gatsby-react-router-scroll": "^2.1.20",
    "immutability-helper": "^3.0.1",
    "mdx.macro": "0.2.8",
    "moment": "^2.24.0",
    "normalize.css": "^8.0.1",
    "prop-types": "^15.7.2",
    "query-string": "^6.8.3",
    "react": "^16.12.0",
    "react-app-polyfill": "^1.0.4",
    "react-cookie": "^4.0.0",
    "react-dnd": "^9.3.4",
    "react-dnd-html5-backend": "^9.3.4",
    "react-dom": "^16.9.0",
    "react-helmet": "^5.2.1",
    "react-hook-form": "^5.1.1",
    "react-id-swiper": "^2.4.0",
    "react-quill": "^1.3.3",
    "react-tagsinput": "^3.19.0",
    "styled-components": "^5.0.0",
    "swiper": "^5.2.0",
    "swr": "^0.1.17",
    "typescript": "^3.8.3"
  },
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "eslint-plugin-react-hooks": "^1.6.0",
    "husky": "^2.3.0",
    "lint-staged": "^8.1.7",
    "react-hot-loader": "^4.8.4",
    "react-scripts": "^3.4.1",
    "svgo": "^1.3.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "build:staging": "env-cmd -f .env.staging react-scripts build",
    "deploy:staging": "aws s3 sync build s3://staging.piction.network",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "svgo": "svgo --config=.svgo.yml --indent=2 ./src/ -r",
    "lint": "eslint --ext jsx --ext js --ext ts --ext tsx src"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.svg": [
      "svgo --config=.svgo.yml --indent=2",
      "git add"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "react-app"
    ],
    "plugins": [
      "react-hooks",
      "@typescript-eslint"
    ],
    "rules": {
      "max-len": "off",
      "no-nested-ternary": "off",
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": true
        }
      ],
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js",
            ".jsx",
            ".ts",
            ".tsx"
          ]
        }
      ],
      "react/forbid-prop-types": "off",
      "react/require-default-props": "off",
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn",
      "no-restricted-imports": [
        "error",
        {
          "paths": [
            {
              "name": "styled-components",
              "message": "Please import from styled-components/macro."
            }
          ],
          "patterns": [
            "!styled-components/macro"
          ]
        }
      ]
    },
    "settings": {
      "import/resolver": {
        "node": {
          "moduleDirectory": [
            "node_modules",
            "src/"
          ]
        }
      }
    }
  },
  "browserslist": [
    "> 1%",
    "ie 11",
    "not dead"
  ]
}
